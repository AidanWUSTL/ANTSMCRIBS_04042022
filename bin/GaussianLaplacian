#!/usr/bin/env python3

import nibabel
import numpy
import os
import sys
import getopt
import scipy.ndimage
import skimage.morphology

opts, args = getopt.getopt(sys.argv[1:], 's:')

def ismember(A, B):
    return numpy.reshape(numpy.in1d(A.ravel(), numpy.array(B)), A.shape)

sigma = 1

for o, a in opts:
    if o == '-s':
        sigma = float(a)

if len(args) < 2:
    print("Usage " + sys.argv[0] + " <subjid>")
    quit()

inFileName = args[0]
outFileName = args[1]

T1DNNII = nibabel.load(inFileName)
T1DNIMG = T1DNNII.get_fdata()

G = scipy.ndimage.gaussian_laplace(T1DNIMG, sigma);
NewNII = nibabel.Nifti1Image(numpy.single(G), T1DNNII.affine)
nibabel.save(NewNII, outFileName)

